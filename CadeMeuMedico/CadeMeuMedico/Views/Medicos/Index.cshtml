@model IEnumerable<CadeMeuMedico.Models.Medico>

@{
    ViewBag.Title = "Index";
}

<h2>Médicos</h2>

<p>
    @Html.ActionLink("Criar novo médico", "Adicionar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            Cidade do Médico
        </th>
        <th>
            Especialidade
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cidade.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Especialidade.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.IDMedico }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.IDMedico }) |
            @Html.ActionLink("Excluir", "Excluir", new { id=item.IDMedico })
        </td>
    </tr>
}

</table>
